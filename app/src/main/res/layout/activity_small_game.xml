                android:layout_weight="2">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/game_IMG_obstacle12"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleX="0.35"
                    android:scaleY="0.35"
                    android:visibility="visible"
                    app:srcCompat="@drawable/pokeball" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/game_IMG_obstacle13"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleX="0.35"
                    android:scaleY="0.35"
                    android:visibility="visible"
                    app:srcCompat="@drawable/pokeball" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/game_IMG_obstacle14"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleX="0.35"
                    android:scaleY="0.35"
                    android:visibility="visible"
                    app:srcCompat="@drawable/pokeball" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_weight="2">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/game_IMG_player0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:visibility="visible"
                    app:srcCompat="@drawable/pikachu" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/game_IMG_player1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:visibility="visible"
                    app:srcCompat="@drawable/pikachu" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/game_IMG_player2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:visibility="visible"
                    app:srcCompat="@drawable/pikachu" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/game_FAB_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:fabCustomSize="64dp"
        app:maxImageSize="64dp"
        app:srcCompat="@drawable/ic_baseline_arrow_left_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/game_FAB_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:fabCustomSize="64dp"
        app:maxImageSize="64dp"
        app:srcCompat="@drawable/ic_baseline_arrow_right_24" />


</RelativeLayout>